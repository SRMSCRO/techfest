<!---------------ADD LEAD------------------->
<div id="Add_lead" class="main">
    <div class="container">
        <form action="/Submit_lead/<%=userId%>" method="post">
            <p>Customer Name :</p>
            <input type="text" name="customer_name">
            <p>Project Detailes :</p>
            <input type="text" name="project_details">
            <p>Segment Details :</p>
            <input type="text" name="Segment_details">
            <!-- <p>Submitted by :</p> -->
            <input type="text" name="lead_submitted_by" style="display: none;" value="<%=user.Name%>">
            <p>Submited to:</p>
            <input type="text" name="lead_submitted_to">
           <button>Submit</button>
        </form>
    </div>
</div>


<!---------------ADD LEAD ENDS---------------->
<!---------------LEAD SUBMITTED------------------->
<div id="lead_submitted" class="main">
    <div class="container">
        <h3>open</h3>
        <%for(let lead of leads){%>
            <%if(lead.lead_submitted_by == user.Name){%>
            <p><%=lead.customer_name%> <%=lead.Status%></p>
            <%}%>
            <%}%>
    </div>
</div>


<!---------------LEAD SUBMITTED ENDS---------------->
<!---------------LEAD ASSIGNED------------------->
<div id="lead_assigned" class="main">
    <div class="container">
        <%for (let lead of leads){%>
            <%if(lead.lead_submitted_by == user.Name){%>
            <%=lead.customer_name%>
            <%=lead.Status%>
            <form action="/update_status/<%=lead._id%>/<%=userId%>" method="POST">
                <select name="status">
                    <option value="Validated">Validated</option>
                    <option value="Rejected">Rejected</option>
                    <option value="Closed">Closed</option>
                  </select>
                  <button>Update</button>
            </form>
            <%}%><%}%>
    </div>
</div>


